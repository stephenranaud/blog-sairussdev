---
import HeaderMain from "./HeaderMain.astro";
import Footer from "./FooterMain.astro";

import "@styles/global.scss";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <link
      href="https://fonts.googleapis.com/css2?family=Exo+2:ital,wght@0,500;0,700;1,500&family=Teko:wght@400;700&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <HeaderMain />
    <slot />
    <Footer />
  </body>
</html>
