---
import type { MarkdownLayoutProps } from "astro";
import Layout from "./Layout.astro";
import Link from "@components/react/Link";

import Tags from "@components/astro/Tags.astro";
import { categories } from "config";
import ButtonLeft from "@components/astro/ButtonLeft.astro";

type FrontmatterPost = {
  title: string;
  author: string;
  date: string;
  image: {
    url: string;
    alt: string;
  };
  tags: string[];
  description: string;
};

type Props = MarkdownLayoutProps<FrontmatterPost>;

const frontmatter = Astro.props.frontmatter;
---

<Layout title={frontmatter.title}>
  <a href="/blog">
    <ButtonLeft>Revenir aux posts</ButtonLeft>
  </a>

  <main class="container post">
    <aside class="tags">
      <Tags tags={categories} />
    </aside>
    <slot />
  </main>
</Layout>

<style>
  .post {
    padding: 2rem;
    margin-top: 7rem;
    background-color: #1f1f1f;
    margin-bottom: 5rem;
    width: 100%;
  }

  .tags {
    margin-bottom: calc(3rem + 7vmin);
  }
</style>
