---
import type { Metrics } from "@models/Post";

import { GrClock, GrCalendar } from "react-icons/gr/index.js";
import { formatDate } from "src/utils";

type Props = {
  metrics: Metrics;
  className?: string | "";
};

formatDate;

const { metrics, className } = Astro.props;
---

<footer class={`footer-metrics ${className}`} aria-label="Footer metrics post">
  <div class="footer-metrics__views item">
    <span>{(<GrClock />)}</span>
    <span>{metrics.numberViews}</span>
  </div>
  <div class="footer-metrics__reading-time item">
    <span>{(<GrClock />)}</span>
    <span>{metrics.readingTime} min</span>
  </div>
  <div class="footer-metrics__date item">
    <span>{(<GrCalendar />)}</span>
    <span
      >{
        metrics.updateAt
          ? formatDate(metrics.updateAt)
          : formatDate(metrics.createAt)
      }</span
    >
  </div>
</footer>

<style>
  .footer-metrics {
    display: flex;
    flex-direction: row;
    gap: 1rem;
    max-width: 320px;
  }

  .footer-metrics .item {
    flex: 1 1 auto;
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }
</style>
